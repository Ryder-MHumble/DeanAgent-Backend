# Supabase / PostgreSQL
DATABASE_URL=postgresql+asyncpg://postgres:password@db.xxx.supabase.co:5432/postgres
SUPABASE_URL=https://xxx.supabase.co
SUPABASE_KEY=your-service-role-key

# RSSHub (self-hosted or public instance)
RSSHUB_BASE_URL=https://rsshub.app

# Playwright
PLAYWRIGHT_MAX_CONTEXTS=3

# Scheduler
MAX_CONCURRENT_CRAWLS=5
DEFAULT_REQUEST_DELAY=1.0

# Social media cookies (optional)
WEIBO_COOKIE=
XIAOHONGSHU_COOKIE=

# API auth (optional simple key for frontend)
API_KEY=

# OpenRouter LLM (for v2 business API enrichment)
OPENROUTER_API_KEY=
OPENROUTER_MODEL=google/gemini-2.0-flash-001

# Twitter API (twitterapi.io) - for KOL monitoring & social search
TWITTER_API_KEY=
TWITTER_API_PROXY=http://127.0.0.1:7890
